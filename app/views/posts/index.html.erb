<% if user_logged_in? %>
    <h2>Hello, <%= current_user.email %></h3>
<% end %>
<h1>Posts</h1>
  <!-- <div class = "posts"> -->
    <%= will_paginate @posts %>
    <div class="container">
      <div class= "row">
    <% @posts.each do |post| %>
    <div class = "col-sm-8">
      <!-- <div class = "post" > -->
      <div class="well">
      <strong><%= post.title %></strong>
      <p><%= post.body %></p>
      <p>Post by: <%= post.user.email %></p>
      <p><%= link_to 'Show', user_post_path(post.user, post) %> |
      <%= link_to 'Edit', edit_user_post_path(post.user, post) %> |
      <%= link_to 'Destroy', user_post_path(post.user, post), method: :delete, data: { confirm: 'Are you sure?' } %></p>
    </div>
  </div>
    <% end %>
  </div>
  <%= will_paginate @posts %>
</div>
