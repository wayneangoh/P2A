<p id="notice"><%= notice %></p>
<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class = "posts">
    <% @posts.each do |post| %>
      <tr class = "post" >
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= post.user %></td>
        <td><%= link_to 'Show', user_post_path(post.user, post) %></td>
        <td><%= link_to 'Edit', edit_user_post_path(post.user, post) %></td>
        <td><%= link_to 'Destroy', user_post_path(post.user, post), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<% if user_logged_in? %>
  <h2>Hello, <%= current_user.email %></h3>
    <%= link_to "Sign Out", sign_out_path, method: :delete %>
    <%= link_to "New Post", new_user_post_path(current_user) %>
  <% else %>
    <%= link_to "Sign In", sign_in_path %>
    <%= link_to 'Sign Up', new_user_path %>
<% end %>

<br>
